<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Лабораторная работа 2 - БД, Hibernate</display-name>

    <listener>
        <listener-class>lab2.persistence.EMFListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>ScheduleServlet</servlet-name>
        <servlet-class>lab2.web.ScheduleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ScheduleServlet</servlet-name>
        <url-pattern>/schedule</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DbSnapshotServlet</servlet-name>
        <servlet-class>lab2.web.DbSnapshotServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DbSnapshotServlet</servlet-name>
        <url-pattern>/db-snapshot</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
