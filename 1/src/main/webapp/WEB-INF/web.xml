<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Сервлеты</display-name>

    <servlet>
        <servlet-name>WordSearchServlet</servlet-name>
        <servlet-class>lab1.WordSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WordSearchServlet</servlet-name>
        <url-pattern>/word-search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CollectionServlet</servlet-name>
        <servlet-class>lab1.CollectionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CollectionServlet</servlet-name>
        <url-pattern>/collection</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FontServlet</servlet-name>
        <servlet-class>lab1.FontServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FontServlet</servlet-name>
        <url-pattern>/font</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
